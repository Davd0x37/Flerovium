{
  "name": "flerovium",
  "version": "0.0.3",
  "description": "Flerovium web client",
  "author": "David",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/Davd0x37/Flerovium.git"
  },
  "engines": {
    "node": ">=14"
  },
  "main": "electron/index.js",
  "build": {
    "appId": "flerovium",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "publish": null
  },
  "scripts": {
    "dev": "vite --host",
    "build": "yarn build:web && yarn electron-builder -wl",
    "build:web": "vue-tsc --noEmit && vite build --emptyOutDir",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=dev electron .",
    "electron:dev:raw": "electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"yarn dev\" \"yarn run electron\"",
    "test": "echo \"web-test-runner -- not implemented\"",
    "format": "prettier --write app tests",
    "format:lint": "prettier --check app",
    "lint": "eslint --ext .ts,.tsx,.js,.vue app",
    "lint:fix": "eslint --ext .ts,.tsx,.js,.vue --fix app",
    "clean": "rimraf dist && rimraf build",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "@vuelidate/core": "^2.0.0-alpha.24",
    "@vuelidate/validators": "^2.0.0-alpha.21",
    "argon2-browser": "^1.18.0",
    "axios": "^0.21.1",
    "buffer": "6.0.3",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "jsoneditor": "^9.5.5",
    "lodash": "^4.17.21",
    "pinia": "next",
    "qs": "^6.10.1",
    "uuid": "^8.3.2",
    "vue": "^3.2.6",
    "vue-i18n": "^9.1.7",
    "vue-router": "4.0.11"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@types/argon2-browser": "^1.18.1",
    "@types/chai": "^4.2.21",
    "@types/concurrently": "^6",
    "@types/debug": "^4.1.7",
    "@types/faker": "^5.5.8",
    "@types/jsoneditor": "^8.6.1",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.7.10",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@vitejs/plugin-vue": "^1.6.0",
    "@vue/compiler-sfc": "^3.2.6",
    "@web/dev-server-esbuild": "^0.2.14",
    "@web/test-runner": "^0.13.17",
    "@web/test-runner-playwright": "^0.8.8",
    "autoprefixer": "^10.3.3",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron": "^14.0.0",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-vue": "^7.17.0",
    "faker": "^5.5.3",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.9",
    "typescript": "^4.4.2",
    "vite": "^2.5.3",
    "vue-eslint-parser": "^7.10.0",
    "vue-tsc": "^0.3.0",
    "wait-on": "^6.0.0"
  }
}
