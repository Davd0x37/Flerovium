{
  "name": "fleroviumv2",
  "version": "0.0.1",
  "main": "index.js",
  "author": "David",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "npm run build:common && npm run build:client",
    "build:prod": "npm run build:common:prod && npm run build:client:prod",
    "build:common": "lerna run build --scope=@flerovium/shared --stream",
    "build:client": "lerna run build --scope=@flerovium/client --scope=@flerovium/electron --stream",
    "build:common:prod": "lerna run build:prod --scope=@flerovium/shared --stream",
    "build:client:prod": "lerna run build:prod --scope=@flerovium/client --scope=@flerovium/electron --stream",
    "test:common": "lerna run test:jest --scope=@flerovium/shared --scope=@flerovium/electron --stream",
    "test:client": "lerna run test:web --scope=@flerovium/client --scope=@flerovium/electron --stream",
    "dev": "lerna run dev --scope=@flerovium/client --scope=@flerovium/electron --stream",
    "dev:client": "lerna run dev --scope=@flerovium/client --stream"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/test-runner": "^0.13.5",
    "@web/test-runner-playwright": "^0.8.6",
    "esbuild": "^0.12.6",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.0",
    "rollup": "^2.50.6",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-esbuild": "^4.5.0",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "rimraf": "^3.0.2"
  }
}
