	"license": "MIT",
	"private": true,
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"directories": {
		"lib": "lib",
		"src": "src",
		"test": "tests"
	},
	"files": [
		"lib",
		"src"
	],
	"scripts": {
		"build": "rimraf lib && tsc",
		"build:prod": "rimraf lib && yarn run eslint:fix && yarn run prettier:format && yarn run build",
		"prettier:format": "prettier --write src tests",
		"prettier:lint": "prettier --check src",
		"eslint:fix": "eslint --fix src",
		"eslint:lint": "eslint src",
		"test": "yarn cook-esm-bundles && web-test-runner",
		"cook-esm-bundles": "rollup -c rollup.config.js"
	},
	"dependencies": {
		"argon2-browser": "^1.18.0",
		"buffer": "6.0.3"
	},
	"devDependencies": {
		"@esm-bundle/chai": "^4.3.4",
