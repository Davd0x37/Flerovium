		"@rollup/plugin-commonjs": "^20.0.0",
		"@rollup/plugin-node-resolve": "^13.0.4",
		"@types/argon2-browser": "^1.12.0",
		"@web/test-runner": "^0.13.5",
		"@web/test-runner-playwright": "^0.8.6",
		"esbuild": "^0.12.6",
		"rimraf": "^3.0.2",
		"rollup": "^2.55.1",
		"rollup-plugin-esbuild": "^4.5.0",
		"typescript": "^4.3.2"
